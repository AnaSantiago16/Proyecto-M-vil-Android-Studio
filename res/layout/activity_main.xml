<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">


    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:background="@color/colorFondo"
        android:text="SELECCIONE UN EJERCICIO:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="652dp"
        android:background="@color/colorFondo"
        android:columnCount="2"
        android:padding="30dp">


        <Button
            android:id="@+id/btnEjercicio1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"

            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 1" />

        <Button
            android:id="@+id/btnEjercicio2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 2" />

        <Button
            android:id="@+id/btnEjercicio3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 3" />

        <Button
            android:id="@+id/btnEjercicio4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 4" />

        <Button
            android:id="@+id/btnEjercicio5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 5" />

        <Button
            android:id="@+id/btnEjercicio6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 6" />

        <Button
            android:id="@+id/btnEjercicio7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 7" />

        <Button
            android:id="@+id/btnEjercicio8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 8" />

        <Button
            android:id="@+id/btnEjercicio9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 9" />

        <Button
            android:id="@+id/btnEjercicio10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ejercicio 10" />

    </GridLayout>

</LinearLayout>